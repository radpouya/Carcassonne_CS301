<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.roux19.carcassonne.MainActivity"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gameBoard"
        android:layout_weight=".25"
        android:src="@drawable/manytile"
        android:background="#000000" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/sideBar"
        android:layout_weight=".75"
        android:weightSum="1"
        android:background="#4553ba">

        <Space
            android:layout_width="fill_parent"
            android:layout_height="31dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currentTile"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/onetile" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="31dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rotateCointainer">

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/rotateLeft"
                android:layout_gravity="center"
                android:background="#3baa44" />

            <Space
                android:layout_width="20dp"
                android:layout_height="fill_parent" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="End Turn"
                android:id="@+id/rotateRight"
                android:layout_gravity="center"
                android:background="#3baa44" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="fill_parent"
            android:layout_height="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers: 7"
            android:id="@+id/followersText"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player | Score"
            android:id="@+id/scoreHeading"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------------------------------"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER   |         0"
            android:id="@+id/p1Score"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU1   |         0"
            android:id="@+id/p2Score"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU2   |         0"
            android:id="@+id/p3Score"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU3   |         0"
            android:id="@+id/p4Score"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quit"
            android:id="@+id/quitButton"
            android:layout_gravity="center"
            android:background="#3baa44" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="help"
            android:id="@+id/helpButton"
            android:layout_gravity="center"
            android:background="#3baa44" />

        <Space
            android:layout_width="fill_parent"
            android:layout_height="23dp" />
    </LinearLayout>


</LinearLayout>
